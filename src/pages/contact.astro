---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Connect!" />

  <!-- Features2 Widget ************** -->

  <Features2
    title="We are here to help!"
    items={[
      {
        title: 'Issue',
        description: 'You can open an issue on our GitHub repository.',
        icon: 'tabler:headset',
        callToAction: {
          text: 'Open Issue',
          href: 'https://github.com/acquire-ai/AcquireLanguage/issues',
          target: '_blank',
        },
      },
      {
        title: 'Email',
        description: 'hello@deepacquire.com',
        icon: 'tabler:mail',
      },
    ]}
  />
</Layout>
