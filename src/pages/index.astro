---
import Layout from '~/layouts/PageLayout.astro';
import extIcon from '~/assets/images/acquire/icon-128.png';
import heroImage from '~/assets/images/acquire/hero.png';
import screenshotEn from '~/assets/images/acquire/screenshot-en.png';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';

const metadata = {
  title: 'Acquire Language — Learn languages by watching videos you love with AI',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: `<img src="${extIcon.src}" alt="Acquire Language icon" class="w-5 h-5 inline-block mr-2 rounded" width="20" height="20" />Get the Extension`,
        href: '#install',
      },
      { text: 'Learn more', href: '#features' },
    ]}
    image={`<img src="${heroImage.src}" alt="Acquire Language Hero Image" class="mx-auto rounded-md w-full" width="1280" height="800" loading="eager" />`}
  >
    <Fragment slot="title">
      Learn languages by watching <span class="hidden xl:inline">YouTube with</span>
      <span class="text-accent dark:text-white"> Acquire Language</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        AI-powered subtitles, word definitions on hover, and a vocabulary notebook. Use your own AI provider for
        translations with zero markup.</span
      >
      <span class="block mb-1 sm:hidden font-bold text-blue-600">Acquire Language: Learn while you watch.</span>
      Enhance YouTube captions, save words with context, and ask follow-up questions.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note title="Philosophy:" description="Simplicity, Best Practices and High Performance" />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Features"
    title="What you get with Acquire Language"
    subtitle="Learn naturally with enhanced subtitles, instant definitions, and personalized vocabulary tracking."
    items={[
      {
        title: 'Enhanced AI Subtitles',
        description:
          'Improved layout for YouTube captions with accurate translations powered by your chosen AI provider.',
        icon: 'tabler:message-language',
      },
      {
        title: 'Hover Definitions',
        description: 'Instant word meanings in context. Click to save words, examples, and notes to your notebook.',
        icon: 'tabler:book-2',
      },
      {
        title: 'Vocabulary Notebook',
        description: 'Build your vocabulary over time with saved words and context from videos you watch.',
        icon: 'tabler:notebook',
      },
      {
        title: 'Flexible AI Providers',
        description: 'Bring your own AI. Connect to multiple providers with zero markup or vendor lock-in.',
        icon: 'tabler:arrows-right-left',
      },
      {
        title: 'Open to new ideas and contributions',
        description:
          'Embracing a culture that is open to new ideas and contributions is integral fostering innovation, collaboration, and a dynamic user experience.',
        icon: 'tabler:bulb',
      },
    ]}
  />

  <!-- Install Widget **************** -->

  <Content
    id="install"
    title="Install Acquire Language"
    subtitle="Now available on the Chrome Web Store. Click 'Add to Chrome' below to install. Microsoft Edge, Safari, and Firefox versions are coming soon."
    items={[
      {
        title: 'Configure AI provider (optional)',
        description:
          'Open the extension settings → AI Service to set your own provider and key. You only pay your provider directly—no markup.',
      },
    ]}
    image={`<img src="${screenshotEn.src}" alt="Install Acquire Language" class="mx-auto w-full rounded-lg bg-gray-500 shadow-lg" width="440" height="280" loading="lazy" />`}
    callToAction={{
      text: 'Add to Chrome',
      href: 'https://chrome.google.com/webstore/detail/pnobdlbfobamledoecdignpneeoohhio',
      target: '_blank',
      icon: 'tabler:brand-chrome',
    }}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="Get your dream website up and running in no time with AstroWind."
    items={[
      {
        title: 'Step 1: <span class="font-medium">Download</span>',
        description:
          "Kickstart with GitHub! Either fork the AstroWind template or simply click 'Use this template'. Your canvas awaits, ready for your digital masterpiece. In just a few clicks, you've already set the foundation.",
        icon: 'tabler:package',
      },
      {
        title: 'Step 2: <span class="font-medium">Add content</span>',
        description:
          "Pour your vision into it. Add images, text, and all that jazz to breathe life into your digital space. Remember, it's the content that tells your story, so make it captivating.",
        icon: 'tabler:letter-case',
      },
      {
        title: 'Step 3: <span class="font-medium">Customize styles</span>',
        description:
          'Give it your personal touch. Tailor colors, fonts, and layouts until it feels just right. Your unique flair, amplified by AstroWind! Precision in design ensures a seamless user experience.',
        icon: 'tabler:paint',
      },
      {
        title: 'Ready!',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />
</Layout>
