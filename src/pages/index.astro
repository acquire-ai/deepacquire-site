---
import Layout from '~/layouts/PageLayout.astro';
import extIcon from '~/assets/images/acquire/icon-128.png';
import heroImage from '~/assets/images/acquire/hero.png';
import screenshotEn from '~/assets/images/acquire/screenshot-en.png';
import setupReady from '~/assets/images/acquire/setup-ready.jpg';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';

const metadata = {
  title: 'Acquire Language — Learn languages by watching videos you love with AI',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: `<img src="${extIcon.src}" alt="Acquire Language icon" class="w-5 h-5 inline-block mr-2 rounded" width="20" height="20" />Get the Extension`,
        href: '#install',
      },
      { text: 'Learn more', href: '#features' },
    ]}
    image={`<img src="${heroImage.src}" alt="Acquire Language Hero Image" class="mx-auto rounded-md w-full" width="1280" height="800" loading="eager" />`}
  >
    <Fragment slot="title">
      Learn languages by watching <span class="hidden xl:inline">YouTube with</span>
      <span class="text-accent dark:text-white"> Acquire Language</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        AI-powered subtitles, word definitions on click, and a sync vocabulary notebook. Your can use your own AI provider for
        free.</span>

      <span class="block mb-1 sm:hidden font-bold text-blue-600">Acquire Language: Learn while you watch.</span>
      Enhance YouTube captions, save words with context, and ask follow-up questions.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->


  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Features"
    title="What you get with Acquire Language"
    subtitle="Learn naturally with enhanced subtitles, instant definitions, and personalized vocabulary tracking."
    items={[
      {
        title: 'Enhanced AI Subtitles',
        description:
          'Improved layout for YouTube captions with accurate translations powered by your chosen AI provider.',
        icon: 'tabler:message-language',
      },
      {
        title: 'Hover Definitions',
        description: 'Instant word meanings in context. Click to save words, examples, and notes to your notebook.',
        icon: 'tabler:book-2',
      },
      {
        title: 'Vocabulary Notebook',
        description: 'Build your vocabulary over time with saved words and context from videos you watch.',
        icon: 'tabler:notebook',
      },
      {
        title: 'Flexible AI Providers',
        description: 'Bring your own AI. Connect to multiple providers with zero markup or vendor lock-in.',
        icon: 'tabler:arrows-right-left',
      },
      {
        title: 'Open to new ideas and contributions',
        description:
          'Embracing a culture that is open to new ideas and contributions is integral fostering innovation, collaboration, and a dynamic user experience.',
        icon: 'tabler:bulb',
      },
    ]}
  />

  <!-- Install Widget **************** -->

  <Content
    id="install"
    title="Install Acquire Language"
    subtitle="Now available on the Chrome Web Store. Click 'Add to Chrome' below to install. Microsoft Edge, Safari, and Firefox versions are coming soon."
    items={[
      {
        title: 'Context-Aware AI Explanations — Easier to Understand',
        description:
          'Do not know a word in the captions? Hover and click to get an instant, context-aware AI explanation tailored to your current level in the clearest way for you.',
      },
      {
        title: 'Got Questions? Keep Asking AI',
        description:
          'Confused by a phrase or mixing up similar words? Ask follow-up questions in the same context and get the differences explained clearly.',
      },
      {
        title: 'AI-Translated Subtitles — Dual Captions',
        description:
          'Sometimes you just want to relax and enjoy a movie or talk without language getting in the way. Acquire Language translates captions into your preferred language and shows dual subtitles so you can simply enjoy.',
      },
      {
        title: 'Synced Notebook — Review Anytime',
        description:
          'Never lose what you have learned. Save words (with context), clips, and even audio. Sync to your favorite notes app and review anytime to reinforce memory.',
      },
    ]}
    image={`<img src="${screenshotEn.src}" alt="Install Acquire Language" class="mx-auto w-full rounded-lg bg-gray-500 shadow-lg" width="440" height="280" loading="lazy" />`}
    callToAction={{
      variant: 'primary',
      text: 'Add to Chrome',
      href: 'https://chrome.google.com/webstore/detail/pnobdlbfobamledoecdignpneeoohhio',
      target: '_blank',
      icon: 'tabler:brand-chrome',
    }}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="Set up Acquire Language"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Choose language & level</span>',
        description:
          'Set the language you want to learn and your current proficiency level to better match your learning needs',
        icon: 'tabler:language',
      },
      {
        title: 'Step 2: <span class="font-medium">Configure AI service</span>',
        description: 'Open Settings -> AI Service to configure your own AI service',
        icon: 'tabler:settings',
      },
      {
        title: 'Step 3: <span class="font-medium">Set up notebook sync</span>',
        description: 'Integrations to configure your own Eudic token to sync your vocabulary notebook to Eudic',
        icon: 'tabler:arrows-right-left',
      },
      {
        title: 'Step 4: <span class="font-medium">Enable subtitles</span>',
        description: 'Open any YouTube video and enable subtitles',
        icon: 'tabler:video',
      },
      {
        title: 'Ready!',
        icon: 'tabler:check',
      },
    ]}
    image={`<img src="${setupReady.src}" alt="Setup ready" class="mx-auto w-full rounded-lg shadow-lg" loading="lazy" />`}
  />
</Layout>
