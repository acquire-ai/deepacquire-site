---
import Layout from '~/layouts/PageLayout.astro';
import extIcon from '~/assets/images/acquire/icon-128.png';
import heroImage from '~/assets/images/acquire/hero.png';
import screenshotEn from '~/assets/images/acquire/screenshot-en.png';
import setupReady from '~/assets/images/acquire/setup-ready.jpg';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';

import { useTranslations } from '~/i18n/utils';

const t = useTranslations('zh-CN');

const metadata = {
  title: 'Acquire Language — 通过观看您喜欢的视频学习语言，使用 AI',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: `<img src="${extIcon.src}" alt="Acquire Language 图标" class="w-5 h-5 inline-block mr-2 rounded" width="20" height="20" />获取扩展`,
        href: '#install',
      },
      { text: '了解更多', href: '#features' },
    ]}
    image={`<img src="${heroImage.src}" alt="Acquire Language 主图" class="mx-auto rounded-md w-full" width="1280" height="800" loading="eager" />`}
  >
    <Fragment slot="title">
      通过观看 <span class="hidden xl:inline">YouTube 视频学习语言，使用</span>
      <span class="text-accent dark:text-white"> Acquire Language</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        AI 驱动的字幕、鼠标悬停查词和词汇笔记本。使用您自己的 AI 提供商进行翻译，零加价。</span
      >
      <span class="block mb-1 sm:hidden font-bold text-blue-600">Acquire Language：边看边学。</span>
      增强 YouTube 字幕，保存带上下文的单词，并提出后续问题。
    </Fragment>
  </Hero>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="功能特性"
    title="Acquire Language 为您提供"
    subtitle="通过增强字幕、即时释义和个性化词汇跟踪，自然学习语言。"
    items={[
      {
        title: '增强 AI 字幕',
        description:
          '改进的 YouTube 字幕布局，由您选择的 AI 提供商提供准确翻译。',
        icon: 'tabler:message-language',
      },
      {
        title: '悬停释义',
        description: '在上下文中即时获取单词含义。点击保存单词、例句和笔记到您的笔记本。',
        icon: 'tabler:book-2',
      },
      {
        title: '词汇笔记本',
        description: '随着时间的推移，通过保存您观看的视频中的单词和上下文来积累词汇。',
        icon: 'tabler:notebook',
      },
      {
        title: '灵活的 AI 提供商',
        description: '使用您自己的 AI。连接到多个提供商，零加价，无供应商锁定。',
        icon: 'tabler:arrows-right-left',
      },
      {
        title: '开放新想法和贡献',
        description:
          '拥抱一种对新想法和贡献开放的文化，这对于促进创新、协作和动态用户体验至关重要。',
        icon: 'tabler:bulb',
      },
    ]}
  />

  <!-- Install Widget **************** -->

  <Content
    id="install"
    title="安装 Acquire Language"
    subtitle="现已在 Chrome 网上应用店上架。点击下方"添加到 Chrome"进行安装。Microsoft Edge、Safari 和 Firefox 版本即将推出。"
    items={[
      {
        title: '情境感知 AI 解释 — 更易理解',
        description:
          '不认识字幕中的单词？悬停并点击即可获得即时的、根据您当前水平定制的情境感知 AI 解释，以最清晰的方式为您呈现。',
      },
      {
        title: '有疑问？继续向 AI 提问',
        description:
          '对某个短语感到困惑或混淆了相似的单词？在相同的上下文中提出后续问题，清楚地解释差异。',
      },
      {
        title: 'AI 翻译字幕 — 双语字幕',
        description:
          '有时您只想放松并享受电影或谈话，而不想让语言成为障碍。Acquire Language 将字幕翻译成您的首选语言，并显示双语字幕，让您轻松享受。',
      },
      {
        title: '同步笔记本 — 随时复习',
        description:
          '永不丢失您学过的内容。保存单词（带上下文）、片段甚至音频。同步到您最喜欢的笔记应用并随时复习以加强记忆。',
      },
    ]}
    image={`<img src="${screenshotEn.src}" alt="安装 Acquire Language" class="mx-auto w-full rounded-lg bg-gray-500 shadow-lg" width="440" height="280" loading="lazy" />`}
    callToAction={{
      variant: 'primary',
      text: '添加到 Chrome',
      href: 'https://chrome.google.com/webstore/detail/pnobdlbfobamledoecdignpneeoohhio',
      target: '_blank',
      icon: 'tabler:brand-chrome',
    }}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="设置 Acquire Language"
    items={[
      {
        title: '步骤 1：<span class="font-medium">选择语言和水平</span>',
        description:
          '设置您想学习的语言和当前的熟练程度，以更好地满足您的学习需求',
        icon: 'tabler:language',
      },
      {
        title: '步骤 2：<span class="font-medium">配置 AI 服务</span>',
        description: '打开设置 -> AI 服务来配置您自己的 AI 服务',
        icon: 'tabler:settings',
      },
      {
        title: '步骤 3：<span class="font-medium">设置笔记本同步</span>',
        description: '集成配置您自己的 Eudic 令牌，将词汇笔记本同步到 Eudic',
        icon: 'tabler:arrows-right-left',
      },
      {
        title: '步骤 4：<span class="font-medium">启用字幕</span>',
        description: '打开任何 YouTube 视频并启用字幕',
        icon: 'tabler:video',
      },
      {
        title: '准备就绪！',
        icon: 'tabler:check',
      },
    ]}
    image={`<img src="${setupReady.src}" alt="设置完成" class="mx-auto w-full rounded-lg shadow-lg" loading="lazy" />`}
  />
</Layout>
